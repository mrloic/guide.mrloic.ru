{#
  Expected variables:
  - site_name: string
  - logo_href: string (optional)
  - nav: [{ title: '...', href: '/...' }, ...]
  - active: string (active href, e.g. '/configuration')
#}

<section id="header">
	<div class="container">
		<div class="row">
			<div class="col-12">

				<!-- Logo -->
				<h1>
					<a href="{{ logo_href|default(nav[0].href|default('/')) }}" id="logo">
						{{ site_name|default('Halcyonic') }}
					</a>
				</h1>

				<!-- Nav (ORIGINAL Halcyonic structure: ONLY <a> inside nav) -->
				<nav id="nav">
					{% for item in nav|default([]) %}
						{% set href = item.href|default('#') %}
						{% set title = item.title|default(item.label|default('')) %}

						<a
							href="{{ href }}"
							class="{{ href == active ? 'current-page-item' : '' }}"
						>
							{{ title }}
						</a>
					{% endfor %}
				</nav>

			</div>
		</div>
	</div>
</section>
